body {
  background: url('/images/bg.svg') no-repeat center center fixed;
  background-size: cover;
  font-family: 'MaShanZheng', 'PoetsenOne', sans-serif;
}

.post-block {
  background: white;
  padding: 10px; 
  font-family: 'MaShanZheng', 'PoetsenOne', sans-serif;
}

.post-body {
  background: white;
  padding: 10px; 
  font-family: 'MaShanZheng', 'PoetsenOne', sans-serif;
}

/* 减少按钮与自定义内容之间的间距 */
.site-nav {
  margin-bottom: 5px; /* 调整为期望的间距大小 */
}

.custom-index {
  margin-top: 5px; /* 调整为期望的间距大小 */
}

code {
  font-family: 'PoetsenOne', monospace;
  color: #3E8E41;
  white-space: pre-wrap; /* 允许自动换行并保持空白符 */
  word-break: break-all; /* 可以在单词内换行 */
  border-radius: 6px; /* 添加圆角 */
}

/* 设置所有 Markdown 标题的颜色 */
h3,h4,h5 {
  color: #007BFF; /* 替换为你想要的颜色 原先#ff9900*/
  font-family: 'MaShanZheng', 'PoetsenOne', sans-serif;
}

h1 {
  font-weight: bold // 设置为加粗
  letter-spacing: 0.1em // 增加文字间隔，可根据喜好调整
  font-family: 'MaShanZheng', 'PoetsenOne', sans-serif;
}

/* 设置站点标题字体 */
.site-title {
  font-family: 'PoetsenOne', sans-serif !important;
}

/* 设置正文中超链接的颜色和加粗 */
.post-body a {
  color: #1DA1F2; /* 替换为你想要的颜色 */
  font-weight: bold;
  font-family: 'MaShanZheng', 'PoetsenOne', sans-serif;
  border-bottom: 1px solid #1DA1F2; /* 添加与文字颜色相同的下划线 */
}

/* 设置超链接悬停效果 */
.post-body a:hover {
  color: #1DA1F2;
  border-bottom-color: #1DA1F2;
}

/* 代码块容器样式 */
.highlight {
  border-radius: 6px;
  margin: 20px 0;
}

.highlight pre {
  border-radius: 6px;
}

/* 行内代码样式 */
p code, li code {
  padding: 2px 4px;
  border-radius: 4px;
  background-color: #f8f9fa;
}

